<h1>Listing gigs</h1>
<%= link_to 'New gig', new_gig_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Band List</th>
    <th>Venue</th>
    <th>Start Time</th>
  </tr>

  <% @gigs.each do |gig| %>
    <tr>
      <td><%= gig.title %></td>
      <td><%= gig.bandlist %></td>
      <td><%= gig.venue %></td>
      <td><%= gig.start_time %></td>
			<td><%= link_to 'Show', gigs_path %></td>
			<td><%= link_to 'Edit', edit_gig_path(gig) %></td>
			<td><%= link_to 'Destroy', gig_path(gig), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
