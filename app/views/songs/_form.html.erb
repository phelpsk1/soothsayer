<%= form_for @song, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :band, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :band, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :genre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :genre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mp3_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mp3_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mp3_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mp3_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mp3_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mp3_file_size, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mp3_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mp3_updated_at, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn' %>
  </div>
<% end %>
