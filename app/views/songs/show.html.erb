<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<p>
<%= audio_tag(@song.mp3.url, autoplay: true, controls: true, autobuffer: true) %>
</p>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @song.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:band) %>:</strong></dt>
  <dd><%= @song.band.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genre) %>:</strong></dt>
  <dd><%= @song.genre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp3_file_name) %>:</strong></dt>
  <dd><%= @song.mp3_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp3_content_type) %>:</strong></dt>
  <dd><%= @song.mp3_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp3_file_size) %>:</strong></dt>
  <dd><%= @song.mp3_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp3_updated_at) %>:</strong></dt>
  <dd><%= @song.mp3_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
