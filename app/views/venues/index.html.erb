<h1>Listing venues</h1>
<%= link_to 'New venue', new_venue_path %>
<table>
  <tr>
		<th></th>
		<th>Title</th>
    <th>Text</th>
  </tr>

  <% @venues.each do |venue| %>
    <tr>
      <td><%= image_tag venue.photo.url(:thumb) %></td>
      <td><%= venue.title %></td>
      <td><%= venue.text %></td>
			<td><%= link_to 'Show', venue_path(venue) %></td>
			<td><%= link_to 'Edit', edit_venue_path(venue) %></td>
			<td><%= link_to 'Destroy', venue_path(venue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
